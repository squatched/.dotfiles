########## SOURCE FILE 00-input.conf ##########
# Setup keyboard mapping.
input "type:keyboard" {
    xkb_layout  "us"
    xkb_variant "dvorak"
    xkb_options "ctrl:nocaps"
    xkb_numlock "enabled"
}
